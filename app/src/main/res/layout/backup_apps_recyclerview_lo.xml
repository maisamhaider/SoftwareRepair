<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backupAppsRvLoMain_CL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/backupAppsRvLoMain_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backupAppsImage_Iv"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/backupAppsName_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-2dp"
                android:gravity="center"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:text="names"
                android:textColor="@android:color/black" />

        </LinearLayout>


    </LinearLayout>


    <Button
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/backupAppsExtract_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
         android:text="Extract"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/backupAppsRvLoMain_LL"
        app:layout_constraintTop_toBottomOf="@+id/backupAppsRvLoMain_LL" />


    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/backupAppsShare_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
         android:baselineAligned="false"
        android:text="Share App"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/backupAppsExtract_btn"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/backupAppsRvLoMain_LL" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"
        android:layout_marginTop="10dp"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupAppsExtract_btn"
        app:layout_constraintVertical_bias="0.5" />


    <androidx.constraintlayout.widget.Guideline

        android:id="@+id/guideline4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />


</androidx.constraintlayout.widget.ConstraintLayout>